---
import Layout from '../layouts/Layout.astro'
import Container from '../components/container.astro'
import GroupDisplay from '../components/group-display.astro'

import HardcodedButtons from '../partials/hardcoded-buttons.astro'
import Button from '../components/button/react'
---

<Layout title="Multi-style buttons">
  <Container class="mt-20">
    <HardcodedButtons />

    <hr class="mt-12" />

    <section class="mt-12">
      <h2 class="text-2xl font-semibold">// TODO: Style the <code>Button</code> component</h2>
      <p class="mt-2">
        Apply the correct styles to the <code>Button</code> component to make the below variants look
        like they should.
      </p>
      <div class="mt-4 space-y-4">
        <GroupDisplay title="Impact">
          <Button>Bold</Button>
          <Button impact="light">Light</Button>
          <Button impact="none">None</Button>
        </GroupDisplay>

        <GroupDisplay title="Size">
          <Button size="large">Large</Button>
          <Button>Medium</Button>
          <Button size="small">Small</Button>
        </GroupDisplay>

        <GroupDisplay title="Shape">
          <Button shape="square">Square</Button>
          <Button>Rounded</Button>
          <Button shape="pill">Pill button</Button>
        </GroupDisplay>
      </div>
    </section>
  </Container>
</Layout>
